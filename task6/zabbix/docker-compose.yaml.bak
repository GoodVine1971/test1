version: '3.5'

services:
  zabbix-mysql:
    image: mysql:5.7
    container_name: "zabbix-mysql"
    environment:
      MYSQL_ROOT_PASSWORD: pass
      MYSQL_DATABASE: zabbix
      MYSQL_USER: zabbix
      MYSQL_PASSWORD: zabbix
    network_mode: "zabbix"
    ports:
      - '3306:3306'
    restart: always
    volumes:
      - /opt/zabbix/mysql:/var/lib/mysql:rw
    command: 
      - mysqld
      - --character-set-server=utf8
      - --collation-server=utf8_bin
      - --default-authentication-plugin=mysql_native_password

  zabbix-server:
    image: zabbix-server-mysql:ubuntu-5.2-latest
    container_name: "zabbix-server"
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /etc/timezone:/etc/timezone:ro 
    environment:
      DB_SERVER_HOST: zabbix-mysql
      MYSQL_DATABASE: zabbix
      MYSQL_USER: zabbix
      MYSQL_PASSWORD: zabbix
    network_mode: "zabbix"
    ports:
       - '10051:10051'
    restart: always
    links: 
      - zabbix-mysql:zabbix-mysql
    depends_on:
      - zabbix-mysql

  zabbix-web:
    image: zabbix/zabbix-web-apache-mysql:ubuntu-5.2-latest
    container_name: zabbix-web
    environment:
      MYSQL_ROOT_PASSWORD: pass
      MYSQL_USER: zabbix
      MYSQL_PASSWORD: zabbix
      ZBX_SERVER_HOST: zabbix-server
      PHP_TZ: Europe/Minsk
    network_mode: "zabbix"
    ports:
      - '80:80'
      - '443:443'
    restart: always
    links: 
      - zabbix-server:zabbix-server
      - zabbix-mysql:zabbix-mysql
    depends_on:
      - zabbix-server
      - zabbix-mysql